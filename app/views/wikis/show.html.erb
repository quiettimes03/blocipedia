<h1><%= markdown(@wiki.title) %></h1>

<div class="row">

   <div class="col-md-8">
     <p><%= markdown(@wiki.body) %></p>
   </div>

   <div class="col-md-4">
     <% if current_user.standard? && @wiki.private? %>
         <small> This is a private wiki. Editing only allowed to wiki owner or collaborators. </small>
     <% else %>
         <%= link_to "Edit Wiki", edit_wiki_path(@wiki), class: 'btn btn-success' %>
         <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
     <% end %>
     <% if current_user.id == @wiki.user_id && current_user.premium?%>
        <%= render partial: 'collaborators/users' %>
     <% end %>
   </div>

</div>
